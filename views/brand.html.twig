<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Shoe Store Manager 2016</title>
    </head>
    <body>
        <h1>{{ brand.getName }}</h1>
        <hr>

        {% if brand_stores is not empty %}
        <h2>Stores that Carry {{ brand.getName }}:</h2>
        <ul>
            {% for store in brand_stores %}
                <li>{{ store.getName }}</li>
            {% endfor %}
        </ul>
        <hr>
        {% endif %}

        {% if all_stores is not empty %}
        <form action="/add_store" method="post">
             <input name="brand_id" type="hidden" value="{{ brand.getId }}">
            <label for="store_id">Add a Store</label>
            <select name="store_id">
                {% for store in all_stores %}
                <option value="{{ store.getId }}">{{ store.getName }}</option>
                {% endfor %}
            </select>
            <button type="submit">Add</button>
        </form>
        {% endif %}

        <a href="/brands">BRANDS</a>
        <a href="/">HOME</a>
    </body>
</html>
